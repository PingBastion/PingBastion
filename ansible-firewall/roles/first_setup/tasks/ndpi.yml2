---

  - name: Install build prerequisites
    apt:
      name:
        - build-essential
        - dkms
        - linux-headers-{{ ansible_kernel }}
        - libpcap-dev
        - libnetfilter-conntrack-dev
        - libtool
        - autoconf
        - automake
        - wget
        - libc6-dev
      state: present
      update_cache: yes


